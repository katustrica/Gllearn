#:import random random

<SnakeHead>:
    canvas:
        Color:
            rgb: (1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

<SnakeTail>:
    canvas:
        Color:
            id: 'tail_color'
            rgb: random.random(),random.random(),random.random()
        Rectangle:
            size: self.size
            pos: self.pos

<SnakeGame>:
    head: snake_head
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    SnakeHead:
        id: snake_head
        size: root.player_size - 2,root.player_size - 2

    Label:
        size: root.player_size, root.player_size
        pos: root.size[0] / 10, 9 * root.size[1] / 10
        text: str(root.score)
        color: random.random(),random.random(),random.random(),1


<Snake>:
    name: 'snake'
    FloatLayout:
        Widget:

